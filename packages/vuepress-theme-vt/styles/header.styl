.vp-doc {
    h1, h2, h3, h4, h5, h6 {
        font-weight: 600;
        line-height: 1.5;

        /* @see https://css-tricks.com/hash-tag-links-padding/ */
        &::before {
            display: block;
            content: ' ';
            margin-top: -70px;
            height: 70px;
            visibility: hidden;
            pointer-events: none;
        }

        &:hover {
            .header-anchor {
                opacity: 1;
            }
        }
    }

    h1 {
        margin: 5rem 0 3rem;
        font-size: 38px;
        line-height: 1.4;
        letter-spacing: -0.02em;
    }

    h2 {
        margin: 4rem 0 1.8rem;
        // border-top: 1px solid var(--vp-c-divider-light);
        font-size: 24px;
        letter-spacing: -0.02em;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 32px;
            margin-bottom: 1.8rem;
        }

        h1+h2 {
            margin-top: 36px;
        }
    }

    h3 {
        font-size: 19px;
        letter-spacing: -0.01em;
        margin: 3rem 0 1.25rem;
    }

    h2+h3 {
        margin-top: 0;
    }

    h4 {
        font-size: 17px;
        margin: 1.8rem 0 1rem;
    }

    .header-anchor {
        float: left;
        margin-left: -0.87em;
        padding-right: 0.23em;
        font-weight: 500;
        opacity: 0;
        transition: color 0.25s, opacity 0.25s;
    }
}
