@require './config';
@require './theme';
@require './code';
@require './code-dark';
@require './custom-blocks';
@require './arrow';
@require './wrapper';
@require './toc';
@require './header';
@require './home';
@require './vp-doc';

html, body {
  padding: 0;
  margin: 0;
  background-color: var(--vp-c-bg);
}

html.dark {
  color-scheme: dark;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px;
  color: var(--vp-c-text-1);
}

.page {
  letter-spacing: 0.2px;
  // padding-left: calc(calc((100% - var(--vp-screen-max-width)) / 2) + var(--vp-sidebar-width));
}

.sidebar-mask {
  position: fixed;
  z-index: 9;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: none;
}

.sidebar {
  font-size: 14px;
  background-color: var(--vp-c-bg-soft);
  width: var(--vp-sidebar-width);
  position: fixed;
  z-index: 10;
  margin: 0;
  top: var(--vp-navbar-height);
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  overflow-y: auto;
}

{$contentClass}:not(.custom) {
  @extend $wrapper;

  > *:first-child {
    margin-top: 4.5rem;
  }

  p.demo {
    padding: 1rem 1.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  img {
    max-width: 100%;
  }
}

{$contentClass}.custom {
  padding: 0;
  margin: 0;

  img {
    max-width: 100%;
  }
}

a {
  color: var(--vp-c-brand);
  text-decoration: none;
}

a.link-hover-effect {
  font-weight: 600;
  color: var(--vp-c-brand);
  border-bottom: 1px dashed currentColor;
  display: inline-block;
  line-height: 1.2;

  &:hover {
    color: var(--vp-c-active-link);
    border-bottom-style: solid;
  }

  &:has(> code) {
    border: none;
    margin-bottom: 2px;

    > code {
      padding: 0.15rem 0.5rem;
      border: 1px dashed currentColor;
    }

    &:hover {
      border-bottom-style: none;

      > code {
        color: var(--vp-c-active-link);
      }
    }
  }
}

p a code {
  font-weight: 400;
  color: var(--c-brand);
}

kbd {
  background: #eee;
  border: solid 0.15rem #ddd;
  border-bottom: solid 0.25rem #ddd;
  border-radius: 0.15rem;
  padding: 0 0.15em;
}

blockquote {
  font-size: 1rem;
  color: #999;
  border-left: 0.2rem solid #dfe2e5;
  margin: 1rem 0;
  padding: 0.25rem 0 0.25rem 1rem;

  & > p {
    margin: 0;
  }
}

ul, ol {
  padding-left: 1.2em;
}

strong {
  font-weight: 500;
}

tr {
  border-top: 1px solid var(--vp-c-divider-light-1);
  transition: background-color 0.5s;
}

tr:nth-child(2n) {
  background-color: var(--vp-c-bg-soft);
}

th, .vp-doc td {
  border: 1px solid var(--vp-c-divider-light-1);
  padding: 0.6em 1em;
}

code, kbd, .line-number {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

p, ul, ol {
  line-height: 1.7;
}

hr {
  border: 0;
  border-top: 1px solid var(--vp-c-divider-light);
}

table {
  border-collapse: collapse;
  margin: 1rem 0;
  display: block;
  overflow-x: auto;
}

.theme-container {
  &.sidebar-open {
    .sidebar-mask {
      display: block;
    }
  }

  &.no-navbar {
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6 {
      margin-top: 1.5rem;
      padding-top: 0;
    }

    .sidebar {
      top: 0;
    }
  }

  &.no-sidebar {
    .navbar {
      .home-link {
        min-width: auto;
        background-color: initial;
      }
    }
  }
}

.icon.outbound {
  display: none !important;
}

@media (min-width: ($MQMobile + 1px)) {
  // TODO wide screen mode
  .page {
    padding-left: calc((100vw - var(--vp-screen-max-width)) / 2 + var(--vp-sidebar-width));

    &.enable-api {
      font-size: 20px;
      padding-left: 240px;

      .vp-doc {
        max-width: 1024px;
      }
    }
  }

  .custom-page {
    padding-top: var(--vp-navbar-height);
  }

  .sidebar {
    left: 0;
    padding-left: calc(((100vw - var(--vp-screen-max-width)) / 2));
    box-sizing: content-box;
  }

  .theme-container.no-sidebar {
    .sidebar {
      display: none;
    }

    .page {
      padding: 0 calc(((100vw - var(--vp-screen-max-width)) / 2));
      margin: 0 auto;

      .theme-default-content {
        margin: 0 auto;
        padding: 2rem 0;
      }

      .page-edit, .page-nav {
        margin: 0 auto;
        padding-left: 0;
      }
    }
  }

  .theme-container:not(.no-sidebar) {
    .nav-left-links {
      padding: 2rem 0rem 2rem calc(var(--vp-doc-padding) - 1.5rem);
    }
  }
}

@require './mobile';
